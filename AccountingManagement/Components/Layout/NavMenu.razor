@inject IStringLocalizer<AppStrings> Localizer
@inject NavigationManager NavigationManager

<div class="navmenu-container">
    <div class="app-logo" @onclick='() => NavigationManager.NavigateTo("/")' style="cursor:pointer;">
        <img src="images/app_logo_placeholder.svg" alt="App Logo" />
        <span>@Localizer["ApplicationTitle"]</span>
    </div>
    <nav class="flex-column">
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fluent-icon icon-home" aria-hidden="true"></span> @Localizer["MenuHome"]
            </NavLink>
        </div>

        <AuthorizeView Roles="Accountant, Admin">
            <Authorized>
                <div class="nav-item">
                    <NavLink class="nav-link" href="companies">
                        <span class="fluent-icon icon-briefcase" aria-hidden="true"></span> @Localizer["MenuCompanies"]
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-group-title">@Localizer["MenuAdministration"]</div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="admin/accountants">
                        <span class="fluent-icon icon-people" aria-hidden="true"></span> @Localizer["MenuAccountants"]
                    </NavLink>
                </div>
                <!-- Add more admin links here if needed -->
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

