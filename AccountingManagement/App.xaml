<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AccountingManagement"
             x:Class="AccountingManagement.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="Primary">#0078D4</Color>
            <Color x:Key="Secondary">#EFF6FC</Color>
            <Color x:Key="LightText">#FFFFFF</Color>
            <Color x:Key="DarkText">#201F1E</Color>

            <!-- Corrected Style for Window -->
            <Style TargetType="Window">
                <Setter Property="Title" Value="Gestion Comptable" />
            </Style>

            <!-- You can still define other global styles here, for example for Page or specific controls -->
            <!-- 
            Example:
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="TextColor" Value="{StaticResource LightText}" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Padding" Value="10,5"/>
            </Style>
            -->

        </ResourceDictionary>
    </Application.Resources>
</Application>