<div class="inline-block animate-spin rounded-full border-text-on-primary @(Small ? "h-4 w-4 border-t-2 border-b-2" : "h-5 w-5 border-t-2 border-b-2") @AdditionalClasses"
     role="status" aria-hidden="true">
    <span class="sr-only">Loading...</span>
</div>

@code {
    [Parameter] public bool Small { get; set; } = false;
    [Parameter] public string? AdditionalClasses { get; set; }
}