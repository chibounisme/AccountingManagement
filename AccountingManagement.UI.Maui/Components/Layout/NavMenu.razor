@inject IStringLocalizer<AppStrings> Localizer

<div class="flex flex-col h-full">
    <div class="px-6 py-4 border-b border-border-color">
        <NavLink href="/" class="flex items-center space-x-3">
            <img src="images/app_logo_placeholder.svg" alt="App Logo" class="h-8 w-8" />
            <span class="text-xl font-semibold text-primary">@Localizer["ApplicationTitle"]</span>
        </NavLink>
    </div>

    <nav class="flex-1 px-3 py-4 space-y-1">
        <NavItem href="" Match="NavLinkMatch.All" IconClass="home-icon-placeholder">
            @Localizer["MenuHome"]
        </NavItem>

        <AuthorizeView Roles="Accountant, Admin">
            <Authorized>
                <NavItem href="companies" IconClass="briefcase-icon-placeholder">
                    @Localizer["MenuCompanies"]
                </NavItem>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="pt-4 pb-2 px-3">
                    <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">@Localizer["MenuAdministration"]</span>
                </div>
                <NavItem href="admin/accountants" IconClass="users-icon-placeholder">
                    @Localizer["MenuAccountants"]
                </NavItem>
            </Authorized>
        </AuthorizeView>
    </nav>

    <div class="p-4 border-t border-border-color">
        @* Footer content for sidebar if any *@
    </div>
</div>

@* 
    Placeholder for SVG icons. Replace with actual SVG or icon font classes.
    Example for app_logo_placeholder.svg in wwwroot/images:
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="#0078D4"><rect width="100" height="100" rx="10"/></svg>
*@